@model Rubrica_telefonica.Database.Chiamatum
@using Rubrica_telefonica.Database
@{
    ViewData["Title"] = "Chiamata";
    var cont = ViewData["contatto"] as Contatto;
}
<style>
    .chiamata {
        width: auto;
        min-width: fit-content;
        max-width: 100%;
        height: auto;
        min-height: fit-content;
        max-height: 100%;
        text-align: center;
    }

    .termina {
        background-color: red;
    }
</style>

<div id="call" class="chiamata">
    @if (cont != null)
    {
        <img src="@cont.Img" />
    }
    else
    {
        <i class="bi bi-person"></i>
    }
    <p id="timer"></p>
    <button id="end" class="termina">Termina</button>
</div>
<script>
    $("end").click(function() {
        $.ajax({
            type: "post",
            url: @Url.Action("End","Chiamata"),
            data: {
                idChiamata = @Model.IdChiamata
                            },
            dataType: "text",
            success: function(data) {
                window.location.href = "@Url.Action("Contatti","Home")"
            }, error(req, status, error) {
                console.log(error);
                alert("Cannot contact databse");
            }
        })
    });

    var ore = 0;
    var minuti = 0;
    var secondi = 0;
    $("timer").setInterval(function() {
        if (secondi < 10) {
            secondi = `0${secondi}`;
        }
        if(minuti < 10){
            minuti = `0${minuti}`;
        }
        if (ore < 10) {
            ore = `0${ore}`;
        }
        secondi++;
        $("timer").innerHTML = ore + ":" + minuti + ":" + secondi
        if(secondi == 59){
            minuti++;
            secondi = 0;
        }
        if (minuti == 59) {
            ore++;
            minuti = 0;
            secondi = 0;
        }
    }, 1000);
</script>